# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://digitaltwin_user:digitaltwin_pass@localhost:5432/digitaltwin

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=debug

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-min-32-characters-change-in-production

# =============================================================================
# LLM PROVIDERS (at least one required)
# =============================================================================
# OpenAI (GPT-3.5, GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude 3 Opus, Sonnet, Haiku)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google Gemini (Gemini Pro, Gemini Pro Vision)
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# MICROSERVICES
# =============================================================================
# AI Core Service (LLM + RAG + Vector + Document Processing)
LLM_GATEWAY_URL=http://localhost:3020
VECTOR_SERVICE_URL=http://localhost:3020
VECTOR_DEFAULT_NAMESPACE=default
DOC_PROCESSING_URL=http://localhost:3020
RAG_RETRIEVAL_URL=http://localhost:3020

# Web Scraping Service
WEB_SCRAPING_SERVICE_URL=http://localhost:3013
WEB_SCRAPING_REDIS_URL=redis://localhost:6379
SCRAPER_ENABLE_SCREENSHOTS=true

# Email Service (Gmail/Outlook/IMAP sync + embeddings)
EMAIL_SERVICE_URL=http://localhost:3017
EMAIL_RATE_LIMIT_WINDOW_MS=60000
EMAIL_RATE_LIMIT_MAX=60

# Realtime Service (WebSocket + Chat orchestration)
REALTIME_SERVICE_URL=http://localhost:3018

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001

# =============================================================================
# OAUTH AUTHENTICATION - USER LOGIN
# =============================================================================
# Google OAuth (for user login)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3001/api/oauth/auth/google/callback

# GitHub OAuth (for user login)
GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_OAUTH_REDIRECT_URI=http://localhost:3001/api/oauth/auth/github/callback

# =============================================================================
# OAUTH AUTHENTICATION - EMAIL INTEGRATION
# =============================================================================
# Gmail OAuth (for email sync)
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REDIRECT_URI=http://localhost:3001/api/email/auth/gmail/callback

# Outlook OAuth (for email sync)
OUTLOOK_CLIENT_ID=your-outlook-oauth-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-oauth-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3001/api/email/auth/outlook/callback

# =============================================================================
# BILLING (OPTIONAL)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
