{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@virtualcoach/shared-types": ["../packages/shared-types/dist"],
            "@virtualcoach/shared-utils": ["../packages/shared-utils/dist"],
            "@virtualcoach/shared-config": ["../packages/shared-config/dist"],
            "@virtualcoach/sdk": ["../packages/sdk/dist"]
        },
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "src/types/custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
